<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AirExchangerMobile.Pages.Plane.AddPlaneModelPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Add new plane model." Margin="0,20" FontSize="20" HorizontalOptions="CenterAndExpand"/>
            <Label Text="Select plane type" Margin="0,5" FontSize="Small"/>

            <Picker x:Name="PlaneTypeSelector">

            </Picker>

            <Entry x:Name="Name" Placeholder="Name"/>

            <Entry x:Name="Capacity" Placeholder="Capacity" Keyboard="Numeric"/>

            <Entry x:Name="Description" Placeholder="Description"/>

            <Label x:Name="AddPlaneModelFailed" Text="Add plane model failed." TextColor="Red" IsVisible="False" Margin="0,20" HorizontalOptions="CenterAndExpand" FontSize="Medium"/>

            <Button Clicked="AddPlaneModelButton_Clicked" Text="Add robot model"/>
            <Button Clicked="BackButton_Clicked" Text="Back"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>